// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-share-post {
  margin: 0;
  &__link {
    border-top: 1px solid $border;
    padding: $spacing 0 ;
  }
  li {
    &:not(:first-of-type) {
      margin-left: $spacing;
    }
    display: inline-block;

    &:before {
      font-size: $mantle;
      color: $midLight;
      margin-right: $spacing*.2;
      vertical-align: middle;
    }

    span {
      font-size: $outerCore;
    }
  }
}
