// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit";

.t-home {
    .c-blog-feed {
        .c-article-item {
            .thumb_image {
                float: left;
                display: inline-block;
                width: 26%;
                height: auto;
                margin-right: 5px;

                img {
                    width: 100%;
                    height: auto;
                }
            }

            .text-align {
                position: relative;
                display: inline-block;
                margin: 0;
                float: right;
                width: 70%;
            }
        }
    }
}

.c-news-list {
    .c-article-item {
        border-bottom: none;
    }
}

.c-article-item {
    clearfix();
    padding-bottom: $spacing* 2;
    border-bottom: 1px solid $border;
    margin-bottom: $spacing;
    position: relative;
    display: inline-block;
    width: 100%;

    .thumbnail {
        width: 100px;
        height: 100px;
        margin-right: 20px;
        float: left;
    }

    .content {
        overflow: hidden;
    }

    .meta {
        .c-featured-news-list & {
            padding: 12px 0px;
        }
    }

    a {
        text-decoration: underline;
    }

    img {
        width: 100%;
        max-width: 100%;
        height: auto;
    }

    h1 {
        ff-title();
        margin-bottom: $spacing;
    }

    &__dateline {
        font-size: 1.6rem;
        color: $mid;
        line-height: 2;

        &__date {
            /* 
            Prevent date from spanning 2 lines
            This happens when blog author is a long string.
             */
            white-space: nowrap;
        }
    }

    /*
    Notes from Antonia articles
     */
    &__note-from-antonia {
        border: none;
        min-height:100px;
        padding-bottom: 0;
        margin-bottom: 0;

        img.loading {
            opacity: .2;
            width: 60px;
            max-width: 60px;
            margin-top: 20px;
            display: block;
        }
    }



    &__note-from-antonia.v-align {
        display: flex;
        align-items: center;
    }


    /*
      PARENT OVERRIDES
    */

    /* Featured news */

    .c-featured-news-list & {
        +above('s') {
            column(1 / 2, $cycle:2);
        }
        padding-bottom: 0;
        margin-bottom: 0;
        border-bottom: 0;

        h1 {
            font-size: $outerCore;
        }
    }

    /* Regular news */

    .c-news-list & {
        padding-bottom: $spacing;
        clearfix();
        +above('s') {
            column(1 / 3, $cycle:3);
        }

        &__excerpt {
            display: block;
        }
    }

    /* Blog feed & article list */

    .c-article-list &,
    .c-blog-feed & {
        clearfix();

        h1 {
            font-size: 1.6rem;
        }

        img {
            column(1 / 4);
        }

        &__byline {
            @extend .c-article-item__dateline;
            &:before {
                content: "|";
                padding: 0 $spacing;
            }
        }
    }

    .c-blog-feed & {
        +above('s') {
            column(1 / 2, $cycle:2)
        }
        +above(m) {
            column(1, $cycle:1)
        }
    }

    /* If the excerpt has been output, hide it on the blog summary component */

    .c-blog-feed & {
        &__excerpt {
            display: none;
        }
    }

    /* 
    Variations
    */

    
    &--blog {
        .meta {
            margin-bottom: 0.4em;
        }
        .c-article-item__dateline {
            line-height: inherit;
        }
    }

}

.c-specialist-content {
    overflow: hidden;
    margin-bottom: 2rem;
}
