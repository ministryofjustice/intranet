@require '_toolkit';
// the 'main' layout

.l-main {
  padding: $spacing;
  +above('l') {
    padding: $spacing*1.8 0 0 0;
  }
  // Remove padding if there's a breadcrumb section
  &:has(section.c-breadcrumbs) {
    padding-top: 0;
  }
  // Remove padding from any l-main children
  .l-main {
    padding-top: 0;
  }
  .l-full-page {
    column(1);
    margin: $spacing*3 0;
  }
  // If l-full-page is the first element, remove the top margin
  > .l-full-page:first-child {
    margin-top: 0;
  }
  .l-primary {
    +above('m') {
      column(2/3);
    }
  }
  .l-secondary {
    +above('m') {
      column(1/3);
    }
  }

  .campaign-container {
    display: inline-block;
    position: relative;
    width: 100%;
    margin: 20px auto;
    &:first-child {
      margin: 0 auto 20px auto;
    }
    .o-title{
      line-height: 30px;
    }
  }

  .l-half-section {
    +above('m') {
      span(1/2, $gutter: .5);
    }
  }

  .l-reverse-order {
    +above('m') {
      .l-primary {
        float:left;
      }
      .l-secondary {
        float:right;
        margin-right: 0;
      }
    }
  }
}

.l-full-page {
  margin: $spacing*3 0;
}

.u-wrapper{
  .l-half-section {
    +above('m') {
      column(1/2, $gutter: 3);
    }
  }
}

// The 'footer' layout
.c-footer {
  .l-primary {
    padding: $spacing*2 0;
    +above('m') {
      padding: $spacing*3 0;
      column(4/5);
    }
  }
  .l-secondary {
    +above('m') {
      padding: $spacing*2 0;
      column(1/5);
      padding: $spacing*3 0;
    }
  }
}

// Column shortcode CSS - bc this widget doesn't have it's own component.
.l-column-wrapper {
  column(1);
  
  .l-column-half-section {
    +above('m') {
      padding-right: $spacing*2;
      span(1/2, $gutter: 2);
    }
  }

  .l-column-half-section:last-of-type {
    padding-right: 0;
  }
}
