// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"


.c-events-item {
  position: relative;
  clearfix();
  padding-bottom $spacing*1.5;
  display inline-block;
  width: 100%;
  h1 {
    ff-title();
    margin-bottom: $spacing;
    a {
      text-decoration: none;
    }
  }
  margin-bottom: $spacing*2;
  h1, &__time, &__location {
    display: block;
    padding-left: 30%;
  }

  &__time, &__location {
    clear:both;
    font-size: $smallCopy;
    h2 {
      span(1/3);
      font-weight: bold;
    }
    time,
    address {
      span(2/3)
    }
  }
  /* PARENT OVVERIDES */

  .c-events-list & {
    +above(m) {
      margin-bottom: 0;
      column(1/2, $cycle: 2);
    }
  }
}
